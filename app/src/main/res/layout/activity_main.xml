<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/weatherText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Погода будет ТУТ!"/>

    <Button
        android:id="@+id/buttonGetWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="getWeather"
        android:text="Получить погоду" />

    <TextView
        android:id="@+id/sendSMSres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Результат отправки СМС тут!"/>

    <Button
        android:id="@+id/buttonSendSms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="sendSms"
        android:text="Отправить СМС" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

       <TextView
        android:id="@+id/timetosendSMS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Время для ежедневной отправки СМС  "/>

        <TextView
            android:id="@+id/hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : "/>
        <TextView
            android:id="@+id/minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/hourEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/minutesEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <Button
        android:id="@+id/startTimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startTimerTask"
        android:text="Запустить автоматическую отправку СМС" />

    <Button
        android:id="@+id/cancelTimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="cancelTimerTask"
        android:text="Остановить автоматическую отправку СМС" />

</LinearLayout>